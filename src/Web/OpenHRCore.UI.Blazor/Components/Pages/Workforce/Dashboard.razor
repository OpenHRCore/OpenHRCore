@page "/workforce"

<PageTitle>Employee Profile</PageTitle>

<RadzenCard class="rz-py-3 rz-px-5 rz-shadow-0 rz-border-0 rz-border-radius-0">
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Path="/" Icon="home" />
        <RadzenBreadCrumbItem Path="/workforce" Text="Workforce Dashboard" />
    </RadzenBreadCrumb>
</RadzenCard>

<RadzenCard class="rz-m-5">
    <RadzenRow class="rz-text-align-center rz-p-0 rz-m-0 rz-mb-5" Gap="1rem">
        <RadzenColumn SizeLG="3" SizeMD="6" SizeSM="6" SizeXS="12">
            <RadzenCard>
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Normal" Gap="1rem">
                    <RadzenText TextStyle="TextStyle.Subtitle2">Total Employees</RadzenText>
                    <RadzenText TextStyle="TextStyle.DisplayH4"><b>1024</b></RadzenText>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
        <RadzenColumn SizeLG="3" SizeMD="6" SizeSM="6" SizeXS="12">
            <RadzenCard>
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Normal" Gap="1rem">
                    <RadzenText TextStyle="TextStyle.Subtitle2">Onboarding</RadzenText>
                    <RadzenText TextStyle="TextStyle.DisplayH4"><b>24</b></RadzenText>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
        <RadzenColumn SizeLG="3" SizeMD="6" SizeSM="6" SizeXS="12">
            <RadzenCard>
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Normal" Gap="1rem">
                    <RadzenText TextStyle="TextStyle.Subtitle2">Ofboarding</RadzenText>
                    <RadzenText TextStyle="TextStyle.DisplayH4"><b>5</b></RadzenText>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
        <RadzenColumn SizeLG="3" SizeMD="6" SizeSM="6" SizeXS="12">
            <RadzenCard>
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Normal" Gap="1rem">
                    <RadzenText TextStyle="TextStyle.Subtitle2">Promotion</RadzenText>
                    <RadzenText TextStyle="TextStyle.DisplayH4"><b>12</b></RadzenText>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>
</RadzenCard>
