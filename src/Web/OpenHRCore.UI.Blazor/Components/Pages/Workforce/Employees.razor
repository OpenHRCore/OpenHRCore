                        Data="@employees" ColumnWidth="250px" LogicalFilterOperator="LogicalFilterOperator.Or" SelectionMode="DataGridSelectionMode.Single" @bind-Value=@selectedEmployees>
          
            <Columns>
                <RadzenDataGridColumn Title="Photo" Frozen="true" Sortable="false" Filterable="false" Width="80px" TextAlign="TextAlign.Center">
                    <Template Context="data">
                        <RadzenImage Path="@data.ProfilePath" class="rz-gravatar" AlternateText="@(data.Name)" />
                    </Template>
                </RadzenDataGridColumn>

                <RadzenDataGridColumn Property="@nameof(EmployeeDto.Name)"  Title="Name" />
                <RadzenDataGridColumn Property="@nameof(EmployeeDto.Email)" Title="Email" />
                <RadzenDataGridColumn Property="@nameof(EmployeeDto.Phone)" Title="Phone" />
                <RadzenDataGridColumn Property="@nameof(EmployeeDto.JobTitle)" Title="Job Title" />
                <RadzenDataGridColumn Property="@nameof(EmployeeDto.Department)" Title="Department" />
                <RadzenDataGridColumn Property="@nameof(EmployeeDto.Address)" Title="Address" />
            </Columns>
        </RadzenDataGrid>
    </RadzenCard>
</div>

