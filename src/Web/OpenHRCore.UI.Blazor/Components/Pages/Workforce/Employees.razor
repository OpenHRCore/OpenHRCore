@page "/workforce/employees"

<div class="rz-m-5">
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Path="/" Icon="home" />
        <RadzenBreadCrumbItem Path="/" Text="Workforce" />
        <RadzenBreadCrumbItem Text="Employees" />
    </RadzenBreadCrumb>
</div>

<div class="rz-m-5">
    <RadzenText class="rz-mb-5" TextStyle="TextStyle.DisplayH5">Employees</RadzenText>

