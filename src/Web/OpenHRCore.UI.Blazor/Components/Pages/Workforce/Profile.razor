@page "/workforce/profile"

<PageTitle>Employee Profile</PageTitle>

<RadzenCard class="rz-py-3 rz-px-5 rz-shadow-0 rz-border-0 rz-border-radius-0">
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Path="/" Icon="home" />
        <RadzenBreadCrumbItem Path="/workforce" Text="Workforce Dashboard" />
        <RadzenBreadCrumbItem Path="/workforce/profile" Text="Profile" />
    </RadzenBreadCrumb>
</RadzenCard>

<RadzenCard class="rz-m-5">
    <RadzenText class="rz-mb-5" TextStyle="TextStyle.H6">Employee Profile</RadzenText>
    <RadzenStack class="rz-mb-5 rz-p-0">
        <RadzenRow>
            <RadzenColumn SizeLG="6" SizeMD="6" SizeSM="12" SizeXS="12">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center">
                    <RadzenImage class="rz-border-base-300 rz-border-radius-2" Path="https://api.dicebear.com/9.x/personas/svg?seed=stephenkyaw" Width="150" Height="150" />
                    <RadzenText TextStyle="TextStyle.H4" Text="Stephen Kyaw" />
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn SizeLG="6" SizeMD="6" SizeSM="12" SizeXS="12">
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Stretch">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                        <RadzenIcon Icon="work" />
                        <RadzenText Text="Software Developer" />
                    </RadzenStack>
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                        <RadzenIcon Icon="email" />
                        <RadzenText Text="info@openhrcore.com" />
                    </RadzenStack>
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                        <RadzenIcon Icon="phone" />
                        <RadzenText Text="+66625019773" />
                    </RadzenStack>
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                        <RadzenIcon Icon="home" />
                        <RadzenText Text="Bangkok, Thailand" />
                    </RadzenStack>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenStack>
    <RadzenTabs TabPosition="TabPosition.Top" RenderMode="TabRenderMode.Client">
        <Tabs>
            <RadzenTabsItem Text="Personal">
                <RadzenRow Gap="3rem" class="rz-p-0 rz-m-0">
                    <RadzenColumn SizeLG="4" SizeMD="4" SizeSM="12">
                        <RadzenStack Gap="2rem">
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Code">
                                <RadzenTextBox @bind-Value=code Name="Code" />
                            </RadzenFormField>
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="First Name">
                                <RadzenTextBox @bind-Value=firstName Name="First Name" />
                            </RadzenFormField>
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Last Name">
                                <RadzenTextBox @bind-Value=lastName Name="LastName" />
                            </RadzenFormField>
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Date Of Birth">
                                <RadzenDatePicker @bind-Value=@dateOfBirth DateFormat="MM/dd/yyyy" Name="DateOfBirth" ShowCalendarWeek />
                            </RadzenFormField>
                        </RadzenStack>
                    </RadzenColumn>
                    <RadzenColumn SizeLG="4" SizeMD="4" SizeSM="12">
                        <RadzenStack Gap="2rem">
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Gender">
                                <RadzenDropDown @bind-Value=male Data=@gender Style="width: 100%;" Name="Gender" />
                            </RadzenFormField>
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Marital Status">
                                <RadzenDropDown @bind-Value=single Data=@maritalStatus Style="width: 100%;" Name="MaritalStatus" />
                            </RadzenFormField>
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Work Email">
                                <RadzenTextBox @bind-Value=workEmail Name="WorkEmail" />
                            </RadzenFormField>
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Personal Email">
                                <RadzenTextBox @bind-Value=personalEmail Name="PersonalEmail" />
                            </RadzenFormField>
                        </RadzenStack>
                    </RadzenColumn>
                    <RadzenColumn SizeLG="4" SizeMD="4" SizeSM="12">
                        <RadzenStack Gap="2rem">
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Phone">
                                <RadzenTextBox @bind-Value=phone Name="Phone" />
                            </RadzenFormField>
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Nationalities">
                                <RadzenDropDown @bind-Value=@national Data=@nationalities Name="Nationalities"
                                                SelectAllText="Select All" Style="width: 100%;" />
                            </RadzenFormField>
                            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Text" Style="width: 100%;" Text="Languages">
                                <RadzenDropDown SelectAllText="Select All" @bind-Value=@language Data=@languages Name="Languages"
                                                Style="width: 100%;" />
                            </RadzenFormField>
                        </RadzenStack>
                    </RadzenColumn>
                </RadzenRow>
            </RadzenTabsItem>
            <RadzenTabsItem Text="Employment"></RadzenTabsItem>
            <RadzenTabsItem Text="Contact Details"></RadzenTabsItem>
            <RadzenTabsItem Text="Emergency Contact"></RadzenTabsItem>
            <RadzenTabsItem Text="Documents"></RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
    <RadzenStack class="rz-mt-3" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" AlignItems="AlignItems.Center">
        <RadzenButton Text="Save" ButtonStyle="ButtonStyle.Primary"></RadzenButton>
    </RadzenStack>
</RadzenCard>

@code {
    string code = "EMP-001";
    string firstName = "Stephen";
    string lastName = "Kyaw";
    string male = "Male";
    string single = "Single";
    string workEmail = "info@openhrcore.com";
    string personalEmail = "info.kyawmyo@gmail.com";
    string phone = "+66625190773";
    DateOnly dateOfBirth = DateOnly.FromDateTime(DateTime.Now);
    string national = "Myanmar";
    string language = "English";
    List<string> gender = new() { "Male", "Female", "Other" };
    List<string> maritalStatus = new() { "Single", "Married", "Divorced", "Widowed" };
    List<string> nationalities = new List<string> { "Myanmar", "Thailand", "Singapore", "Malaysia" };
    List<string> languages = new List<string> { "Myanmar", "Thailand", "English", "Chinese" };
}