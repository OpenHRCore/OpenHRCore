@page "/company-profile"

<PageTitle>Company Profile</PageTitle>

<div class="rz-m-5">
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Path="/" Icon="home" />
        <RadzenBreadCrumbItem Path="/" Text="Organizaiton" />
        <RadzenBreadCrumbItem Text="Company Profile" />
    </RadzenBreadCrumb>
</div>

<div class="rz-m-5">
    <RadzenText class="rz-mb-5" TextStyle="TextStyle.DisplayH5">Update Company Profile</RadzenText>

    <RadzenCard class="rz-mb-5">
        <RadzenStack class="rz-mb-5">
            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Flat" Style="width: 100%;" Text="Company Name">
                <RadzenTextBox Name="Name" Value="OpenHRCore" />
            </RadzenFormField>
            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Flat" Style="width: 100%;" Text="Email">
                <RadzenTextBox Name="Email" Value="info@openhrcore.com" />
            </RadzenFormField>
            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Flat" Style="width: 100%;" Text="Phone">
                <RadzenTextBox Name="Phone" Value="+66625190773" />
            </RadzenFormField>
            <RadzenFormField AllowFloatingLabel="true" Variant="Variant.Flat" Style="width: 100%;" Text="Address">
                <RadzenTextArea Name="Address" Style="width: 100%" aria-label="TextArea" />
            </RadzenFormField>
        </RadzenStack>
        <RadzenButton Text="Save" ButtonStyle="ButtonStyle.Primary"></RadzenButton>
    </RadzenCard>

    <RadzenCard class="rz-mb-5">
        <RadzenStack class="rz-mb-5">
            <RadzenImage class="rz-border-base-300 rz-border-radius-2" Path="./Assets/logo.png" Width="150" Height="150" />
            <RadzenFileInput TValue="string" Style="width: 100%" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "select file" }})" />
        </RadzenStack>
        <RadzenButton Text="Upload" ButtonStyle="ButtonStyle.Secondary"></RadzenButton>
    </RadzenCard>
</div>

